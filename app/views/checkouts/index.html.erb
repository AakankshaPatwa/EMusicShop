<p id="notice"><%= notice %></p>

<h1>Checkouts</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Pincode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkouts.each do |checkout| %>
    <tr>
      <td><%= checkout.firstname %></td>
      <td><%= checkout.lastname %></td>
      <td><%= checkout.email %></td>
      <td><%= checkout.contact %></td>
      <td><%= checkout.address1 %></td>
      <td><%= checkout.address2 %></td>
      <td><%= checkout.city %></td>
      <td><%= checkout.state %></td>
      <td><%= checkout.pincode %></td>
      <td><%= link_to 'Show', checkout %></td>
      <td><%= link_to 'Edit', edit_checkout_path(checkout) %></td>
      <td><%= link_to 'Destroy', checkout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checkout', new_checkout_path %>
