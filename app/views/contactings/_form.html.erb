<%= form_with model: @contacting, local: true do |form| %>

  <div class="form-inputs py-2 ">
    <h1>Contact Us </h1>

    <div class="field">
      <%= form.label :name %><br />
      <%= form.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= form.label :email %><br />
      <%= form.text_field :email, autofocus: true %>
    </div>
    <div class="field">
      <%= form.label :query %><br />
      <%= form.text_field :query, autofocus: true %>
    </div>

  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>


 
  
 
